{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'front/layout.html.twig' %}
{% block title %}
    Erreur
{% endblock %}

{% block content %}
    <!-- error area start -->
    <section class="error__area pt-60 pb-100">
        <div class="container">
            <div class="col-xl-8 offset-xl-2 col-lg-8 offset-lg-2">
                <div class="error__content text-center">
                    <div class="error__number">
                        <h1>500</h1>
                    </div>
                    <span>Une erreur s'est produite.</span>
                    <p>
                        Merci de nous contactez via notre <span class="highlight comment">formulaire de <a
                                    href="{{ path('front_contact') }}">contact</a></span>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}