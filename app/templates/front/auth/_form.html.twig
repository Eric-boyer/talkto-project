<form action="{{ path('front_login') }}" method="POST">
    <label for="email">E-mail</label>
    <input id="email" name="email" type="email" placeholder="email@exemple.fr"
           value="{{ last_username }}" required autofocus/>
    <label for="pass">Mot de passe</label>
    <input id="pass"
           name="password"
           type="password"
           placeholder="Mot de passe"
    />
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('front_login') }}">
    <div class="login-action mb-20 fix">
        <span class="log-rem f-left">
            <input id="remember" name="_remember_me" type="checkbox"/>
            <label for="remember">Se souvenir de moi !</label>
        </span>
        <span class="forgot-login f-right">
            <a href="{{ path('front_forgot_password_request') }}">Mot de passe oubli√© ?</a>
        </span>
    </div>
    <button class="os-btn w-100">Connexion</button>
    <div class="or-divide"><span>ou</span></div>
    <a href="{{ path('front_user_new') }}" class="os-btn os-btn-black w-100">S'inscrire</a>
</form>