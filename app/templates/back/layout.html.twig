{% extends 'back/base.html.twig' %}

{% block body %}
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade show">
        <span class="spinner"></span>
    </div>
    <!-- end #page-loader -->

    <!-- begin #page-container -->
    <div id="page-container" class="page-container fade page-sidebar-fixed page-header-fixed">
        <!-- begin #header -->
        <div id="header" class="header navbar-default">
            <!-- begin navbar-header -->
            <div class="navbar-header">
                <a title="Reented" href="#" rel="nofollow" class="navbar-brand">
                    <img src="{{ asset('build/images/back/logo.png')|imagine_filter('logo') }}" alt="Reented"> <b>Administration</b>&nbsp;Site</a>
                <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- end navbar-header -->
        </div>
        <!-- end #header -->

        <!-- begin #sidebar -->
        <div id="sidebar" class="sidebar">
            <!-- begin sidebar scrollbar -->
            <div data-scrollbar="true" data-height="100%">
                <!-- begin sidebar user -->
                {% include 'back/layout/_user_nav.html.twig' %}
                <!-- end sidebar user -->
                <!-- begin sidebar nav -->
                {% include 'back/layout/_nav.html.twig' %}
                <!-- end sidebar nav -->
            </div>
            <!-- end sidebar scrollbar -->
        </div>
        <div class="sidebar-bg"></div>
        <!-- end #sidebar -->

        <!-- begin #content -->
        <div id="content" class="content">
            <!-- begin page-header -->
            <h1 class="page-header row col-12">
                <div class="col-lg-3 col-xs-12">
                    {% block page_title %}Accueil{% endblock %}
                </div>
                <div class="col-lg-6 col-xs-12">
                    {% block form_filter %}{% endblock %}
                </div>
                <div class="col-lg-3 col-xs-12 text-right">
                    {% block action_buttons %}
                    {% endblock %}
                </div>
            </h1>
            <!-- end page-header -->
            <!-- begin panel -->
            <div data-back-commun-target="container">
            {% block content %}
            {% endblock %}
            </div>
            <!-- end panel -->
        </div>
        <!-- end #content -->

        <!-- begin scroll to top btn -->
        <a href="#" rel="nofollow" title="Remonter"
           data-toggle="tooltip" data-placement="top"
           class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade"
           data-click="scroll-top"><i class="fa fa-angle-up"></i></a>
        <!-- end scroll to top btn -->
        {% include 'back/partials/_modal.html.twig' %}
    </div>
    <!-- end page container -->
{% endblock %}
