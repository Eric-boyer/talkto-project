{% extends 'back/layout.html.twig' %}

{% block title %}Fiche de {{ lessor.fullname|upper }}{% endblock %}
{% block page_title %}Fiche de {{ lessor.fullname|upper }} {% endblock %}

{% block action_buttons %}
    <a title="Retour sur le contenu" href="{{ path('back_lessor_index') }}"
       class="btn btn-xs btn-primary">
        <i class="fa fa-arrow-left"></i>&nbsp; Retour
    </a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-12">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Fiche client n° {{ lessor.id }}</h4>
                </div>
                <div class="panel-body">
                    <div class="row col-12">
                        <div class="col-lg-7 text-left">
                            <h2>Informations générales</h2>
                        </div>
                        <div class="col-lg-5 text-right">
                            <a class="btn btn-outline-primary"
                               href="{{ path('back_lessor_authenticate', {'id': lessor.id}) }}" title="Se connecter avec ce client">
                                <i class="fa fa-user"></i> Se connecter avec ce client
                            </a>
                            <a class="btn btn-outline-primary"
                               href="{{ impersonation_path(lessor.email) }}"
                               title="Se connecter avec ce client">
                                <i class="fa fa-user"></i> Se connecter avec ce client
                            </a>
                            <div>
                                <small><i class="fa fa-exclamation-triangle"></i> <em>N'ouvrir qu'une seule fenêtre à la fois.</em></small>
                            </div>
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-xs-12 col-lg-6">
                            <div>
                                <label for="">Civilité :</label>
                                <span>{{ lessor.genre.label }}</span>
                            </div>
                            <div>
                                <label for="">Nom / Prénom : </label>
                                <span>{{ lessor.fullname }}</span>
                            </div>
                            <div>
                                <label for="">E-mail : </label>
                                <span>
                                    <a href="mailto:{{ lessor.email }}"
                                         title="E-mail">
                                        {{ lessor.email }}
                                    </a>
                                </span>
                            </div>
                            <div>
                                <label for="">Adresse :</label>
                                <span>{{ lessor.fulladdress }}</span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-lg-6">
                            <div>
                                <label for="">Téléphone :</label>
                                <span>
                                    <a href="tel:{{ lessor.phone }}" title="Téléphone">
                                        {{ lessor.phone }}
                                    </a>
                                </span>
                            </div>
                            <div>
                                <label for="">Compte stripe Id :</label>
                                <span>{{ lessor.stripeCustomerId }}</span>
                            </div>
                            <div>
                                <label for="">Compte Vendeur stripe Id :</label>
                                <span>{{ lessor.stripeAccountId }}</span>
                            </div>
                            <div>
                                <label for="">Description :</label>
                                <span>{{ lessor.description }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- include list reservation-->
               {{ include('back/lessor/list_reservation.html.twig') }}
                <!-- end include -->
                <!-- include list -->
                {{ include('back/lessor/list_product.html.twig') }}
                <!-- end include -->
                <!-- include delete button -->
                {{ include('back/lessor/_delete_form.html.twig') }}
                <!-- end include -->
            </div>
        </div>
    </div>
{% endblock %}
